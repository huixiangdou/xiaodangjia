<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/recipe_pic_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"/>
    android:src="@drawable/notification_template_icon_bg"/>
    <TextView
        android:id="@+id/recipe_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recipe_pic_image"
        android:text="标题"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/recipe_peoplenum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recipe_cookingtime_tv"
        android:layout_alignBottom="@+id/recipe_cookingtime_tv"
        android:layout_alignLeft="@+id/recipe_name_tv"
        android:layout_alignStart="@+id/recipe_name_tv"
        android:text="来源"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/recipe_cookingtime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recipe_pic_image"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="时间"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14dp" />
</RelativeLayout>
